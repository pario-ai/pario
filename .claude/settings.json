{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && make lint 2>&1",
            "statusMessage": "Running golangci-lint..."
          }
        ]
      }
    ]
  }
}
